<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:id="@+id/linearLayout"
        android:background="#A93226">
        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:text="'SHWE' CLINIC"
            android:fontFamily="cursive"
            android:textColorHighlight="#ffffff"
            android:textSize="40dp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textStyle="bold"
            />
        
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:text="REGISTER PATIENT INFORMATION"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:textColor="#196F3D"
            android:textStyle="bold"
            android:background="@drawable/btn_capsule_shape"/>

        <Button
            android:id="@+id/btnRegUpdate"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:text="UPDATE PHYSICAL EXAMINATION"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:textColor="#196F3D"
            android:textStyle="bold"
            android:background="@drawable/btn_capsule_shape"/>

        <Button
            android:id="@+id/btnView"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:text="VIEW PATIENT INFORMATION"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:textColor="#196F3D"
            android:textStyle="bold"
            android:background="@drawable/btn_capsule_shape"/>

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:text="UPDATE PATIENT INFORMATION"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:textColor="#196F3D"
            android:textStyle="bold"
            android:background="@drawable/btn_capsule_shape"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:text="DELETE PATIENT INFORMATION"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:textColor="#196F3D"
            android:textStyle="bold"
            android:background="@drawable/btn_capsule_shape"/>

        <Button
            android:id="@+id/doctorlogout"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:text="Log Out"
            android:textColor="#FFFFFF"
            android:layout_gravity="right"
            android:background="@drawable/rounded_corner_textview"/>




    </LinearLayout>



</ScrollView>
