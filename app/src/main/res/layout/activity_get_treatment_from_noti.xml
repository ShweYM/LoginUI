<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sym.login.GetTreatmentFromNoti"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/selling"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/sale" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:padding="10dp"


        >
        <TableRow>
            <TextView
                android:id="@+id/editnotiName"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/selling"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="53dp"
                android:text="Name"
                android:textSize="18dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/editnotigetname"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_alignRight="@id/editnotiName"
                android:layout_below="@+id/selling"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="53dp"
                android:text="Maung"
                android:textSize="18dp"
                android:background="@drawable/btnblue"
                android:textColor="#ffffff"
                android:paddingLeft="5dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/editnotiRegNo"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/selling"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:text="Register No"
                android:textSize="18dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/editnotigetregno"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_below="@+id/selling"
                android:layout_alignRight="@id/editnotiName"
                android:layout_marginTop="10dp"
                android:text="Maung"
                android:textSize="18dp"
                android:layout_marginLeft="0dp"
                android:background="@drawable/btnblue"
                android:textColor="#ffffff"
                android:paddingLeft="5dp"

                />

        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/editnotiTreatment"
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:layout_below="@+id/selling"
                android:layout_marginLeft="2dp"
                android:text="Treatment"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/editnotigettreatment"
                android:layout_width="260dp"
                android:layout_height="230dp"
                android:layout_alignRight="@id/editnotiName"
                android:layout_below="@+id/selling"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btnblue"
                android:textColor="#ffffff"
                android:paddingLeft="5dp"
                android:text="Maung"
                android:textSize="18dp"
                android:gravity="top"

                />

        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/editAmount"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/selling"
                android:layout_marginLeft="2dp"
                android:text="Amount :"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/editAmt"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:drawablePadding="20dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/btnblue"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-light"
                />

        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btnstore"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:layout_marginTop="510dp"
                android:background="#825335"
                android:fontFamily="serif"
                android:text="Store"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btnback"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginTop="510dp"
                android:background="#825335"
                android:fontFamily="serif"
                android:text="Back"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>








</RelativeLayout>
